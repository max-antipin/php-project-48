#!/usr/bin/env php
<?php

declare(strict_types=1);

require_once __DIR__ . '/../vendor/autoload.php';

use Differ\Differ\Enum\Format;

use function Differ\Differ\genDiff;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$args = Docopt::handle($doc, ['version' => 'Generate diff 1.0']);
$filename1 = $args['<firstFile>'];
$filename2 = $args['<secondFile>'];
$f = $args['--format'];
assert(is_string($filename1));
assert(is_string($filename2));
assert(is_string($f));
$format = Format::tryFrom($f);
if (!$format) {
    die("Invalid format name: $f; acceptable names: " . implode(', ', array_column(Format::cases(), 'value')));
}
echo genDiff($filename1, $filename2, $format);
