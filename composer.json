{
    "name": "hexlet/code",
    "description": "Учебный проект Вычислитель отличий (Hexlet)",
    "type": "library",
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.5"
    },
    "license": "MIT",
    "autoload": {
        "files": [
            "src/Library.php",
            "src/Formatters.php",
            "src/Formatters/Json.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Stylish.php"
        ],
        "psr-4": {
            "Differ\\Differ\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Differ\\Differ\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Max Antipin",
            "email": "max.v.antipin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^8.0|^7.0"
    },
    "bin": [
        "bin/gendiff"
    ]
}
